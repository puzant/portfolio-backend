<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/_head') %>
</head>

<body>
  <%- include('./partials/_navigation') %>
  <%- include('./projects/_projects', { projects }) %>
  <%- include('./publications/_publications', { publications }) %>
  <%- include('./travelImages/travelImages', { travelImages }) %>

  <script src="/js/alert.js"></script>
  <script>
    const API_BASE_URL = "<%= process.env.NODE_ENV === 'production' ? 'https://portfolio-backend-gq2s.onrender.com' : 'http://localhost:3000' %>"

    document.getElementById('logoutBtn').addEventListener('click', function() {
       fetch('/auth/logout', {
        method: 'POST',
        credentials: 'include',
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          window.location.href = '/auth/login'
        }
      })
    })
  </script>

  <script src="/js/api.js"></script>
</body>
</html>