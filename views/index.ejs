<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <title>CMS</title>
</head>

<body>

  <div class="p-4">
    <div class="d-flex align-items-center gap-3">
      <h2>‚úàÔ∏è Travel Images</h2>
      <i class="bi bi-file-earmark-plus"></i>
    </div>

    <div class="d-flex my-2 gap-2 flex-wrap">
      <% travelImages.forEach(image => { %>
        <div class="position-relative d-flex flex-column">
          <img class="img-thumbnail rounded" style=" object-fit: cover; width: 177px; height: 177px" src="<%= image.url %>" alt="">
          <div class="position-absolute top end-0 rounded bg-white p-1"><i class="bi bi-trash3"></i></div>
        </div>
      <% }) %>
    </div>
  </div>

  <div class="p-4 my-2">
    <h2>üöÄ Projects</h2>
     
    <div class="d-flex gap-4">
      <% projects.forEach(project => { %>
        <div class="card w-25">
          <div class="card-body">
            <div class="d-flex justify-content-between">
              <b class="card-title"><%= project.name %></b>
              <div class="d-flex gap-4">
                <i class="bi bi-pencil"></i>
                <i class="bi bi-trash3"></i>
              </div>
            </div>

            <p class="card-text"><%= project.description %></p>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <div class="p-4 my-2">
    <h2>üìö Publications</h2>
     
    <div class="d-flex gap-4">
      <% publications.forEach(publication => { %>
        <div class="card d-flex w-25">
          <div class="card-body">
            <b class="card-title"><%= publication.title %></b>
            <p class="card-text text-truncate" style="max-width: 200px"><%= publication.preview %></p>
            
            <div class="d-flex justify-content-between">
              <p class="card-text"><%= publication.publishedDate %></p>
              
              <div class="d-flex gap-4">
                <i class="bi bi-pencil"></i>
                <i class="bi bi-trash3"></i>
              </div>
            </div>

          </div>
        </div>
      <% }) %>
    </div>
  </div>


</body>
</html>