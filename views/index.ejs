<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <title>Document</title>
</head>

<body>
  <div class="p-2 my-2">
    <h2>Projects</h2>
     
    <div class="d-flex gap-4">
      <% projects.forEach(project => { %>
        <div class="card w-25">
          <div class="card-body">
            <p class="card-title"><%= project.name %></p>
            <p class="card-text"><%= project.description %></p>
            <button type="button" class="btn btn-primary">Edit</button>
            <button type="button" class="btn btn-danger">Delete</button>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <div class="p-2 my-2">
    <h2>Publications</h2>
     
    <div class="d-flex gap-4">
      <% publications.forEach(publication => { %>
        <div class="card d-flex w-25">
          <div class="card-body">
            <b class="card-title"><%= publication.title %></b>
            <p class="card-text text-truncate" style="max-width: 200px"><%= publication.preview %></p>
            <p class="card-text"><%= publication.publishedDate %></p>
            <button type="button" class="btn btn-primary">Edit</button>
            <button type="button" class="btn btn-danger">Delete</button>
          </div>
        </div>
      <% }) %>
    </div>
  </div>


</body>
</html>