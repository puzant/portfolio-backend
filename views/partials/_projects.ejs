<div class="p-4 my-2">
  <div class="d-flex align-items-center gap-3">
    <h2>ðŸš€ Projects</h2>  
    <a href="projects/add">
      <h5><i class="bi bi-plus-circle-fill"></i></h5>
    </a>
  </div>
  
  <% if (projects.length == 0) { %>
    <div class="alert alert-light w-25" role="alert">
      There are no projects yet!
    </div>
  <% } else { %>

    <div class="d-flex gap-4">
      <% projects.forEach(project => { %>
        <div class="card w-25">
          <div class="card-body">
            <div class="d-flex justify-content-between">
              <b class="card-title"><%= project.name %></b>
              <div class="d-flex gap-4">
                <a href=""><i class="bi bi-pencil"></i></a>
                <i class="bi bi-trash3 pe-auto text-danger"></i>
              </div>
            </div>

            <p class="card-text"><%= project.description %></p>
            <hr>
            <img src="<%= project.preview %>" style="width: 100%; height: 100px;" class="rounded object-fit-cover" alt="">
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>

</div>